FROM node:16-alpine as build-stage
WORKDIR /var/lib/jenkins/workspace/deploytest_front
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build
FROM nginx:stable-alpine as production-stage

COPY --from=build-stage /var/lib/jenkins/workspace/deploytest_front/build /usr/share/nginx/html
COPY --from=build-stage /var/lib/jenkins/workspace/deploytest_front/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g","daemon off;"]